<CanvasExample1>:
    canvas:
        Rectangle:
            pos: self.center_x - size // 2, self.center_y - size // 2
            size: size, size
        Ellipse:
            pos: 200, 500
            size: size, size // 2
        Line:
            points: (0, 0, self.width//4, 200, self.width//2, 0, self.width*3//4, 200, self.width, 0)
            width: 2


<CanvasExample2>:
    canvas:
        Line:
            points: (0, self.height//2, self.width, self.height//2)
            width: 3
        Line:
            points: (self.width//2, self.height, self.width//2, 0)
            width: 3


